<h1>Listing pays</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Datetime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pays.each do |pay| %>
  <tr>
    <td><%= pay.amount %></td>
    <td><%= pay.datetime %></td>
    <td><%= link_to 'Show', pay %></td>
    <td><%= link_to 'Edit', edit_pay_path(pay) %></td>
    <td><%= link_to 'Destroy', pay, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

